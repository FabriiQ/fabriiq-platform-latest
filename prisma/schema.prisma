model Message {
  id             String        @id @default(cuid())
  conversationId String
  senderId       String
  content        String        @db.Text
  messageType    MessageContentType @default(TEXT)

  // Threading support
  parentMessageId String?      // For reply threading
  threadDepth    Int          @default(0) // 0 = root, 1+ = reply depth
  replyCount     Int          @default(0) // Number of direct replies

  // Rich content support
  attachments    Json?        // File attachments with metadata
  mentions       String[]     @default([]) // User IDs mentioned in message
  metadata       Json?        // Additional message metadata

  // Message state
  isPinned       Boolean      @default(false) // Pin important messages
  isEdited       Boolean      @default(false) // Track if message was edited
  isDeleted      Boolean      @default(false) // Soft delete support

  // Timestamps
  sentAt         DateTime     @default(now())
  editedAt       DateTime?
  deletedAt      DateTime?

  // Status and delivery
  status         MessageStatus @default(SENT)

  // Relations
  conversation   Conversation  @relation(fields: [conversationId], references: [id])
  sender         User          @relation(fields: [senderId], references: [id])
  parentMessage  Message?      @relation("MessageReplies", fields: [parentMessageId], references: [id])
  replies        Message[]     @relation("MessageReplies")
  reactions      MessageReaction[]
  readStatus     MessageReadStatus[]

  @@index([conversationId, sentAt])
  @@index([senderId])
  @@index([parentMessageId])
  @@index([conversationId, threadDepth, sentAt]) // For threaded message queries
  @@map("messages")
}

// Message reactions (emoji responses)
