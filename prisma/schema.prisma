  // Relations
  user                  User?                 @relation("UserAnomalies", fields: [userId], references: [id])
  reviewedByUser        User?                 @relation("ReviewedAnomalies", fields: [reviewedBy], references: [id])
  incident              SecurityIncident?     @relation(fields: [incidentId], references: [id])
  
  @@index([userId, detectedAt])
  @@index([anomalyType, riskScore])
  @@index([status, detectedAt])
  @@map("security_anomalies")
