  incidentType          IncidentType
  severity              IncidentSeverity      @default(MEDIUM)
  status                IncidentStatus        @default(DETECTED)
  title                 String
  description           String?               @db.Text
  
  // Detection details
  detectedAt            DateTime              @default(now())
  detectionMethod       DetectionMethod       @default(AUTOMATED)
  sourceIp              String?
  userAgent             String?
  affectedUserId        String?
  affectedDataCategories String[]             @default([])
  
  // Impact assessment
  usersAffected         Int                   @default(0)
  recordsAffected       Int                   @default(0)
  dataTypes             String[]              @default([])
  
  // Response tracking
  assignedTo            String?
  investigatedBy        String?
  resolvedBy            String?
  resolvedAt            DateTime?
  
  // Notification tracking
  regulatorsNotified    Boolean               @default(false)
  regulatorsNotifiedAt  DateTime?
  usersNotified         Boolean               @default(false)
  usersNotifiedAt       DateTime?
  
  // Evidence and documentation
  evidenceCollected     Json?
  responseActions       Json?
  
  // Metadata
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt
  
  // Relations
  affectedUser          User?                 @relation("AffectedUser", fields: [affectedUserId], references: [id])
  assignedToUser        User?                 @relation("AssignedIncidents", fields: [assignedTo], references: [id])
  investigatedByUser    User?                 @relation("InvestigatedIncidents", fields: [investigatedBy], references: [id])
  resolvedByUser        User?                 @relation("ResolvedIncidents", fields: [resolvedBy], references: [id])
  
  notifications         IncidentNotification[]
  anomalies             SecurityAnomaly[]
  
  @@index([status, severity, detectedAt])
  @@index([affectedUserId, detectedAt])
  @@index([incidentType, status])
  @@map("security_incidents")
}

model SecurityAnomaly {
  id                    String                @id @default(cuid())
  anomalyType           AnomalyType
  riskScore             Float                 @default(0.0) // 0.0 to 1.0
  description           String
  details               Json?
  
  // Detection context
  detectedAt            DateTime              @default(now())
  userId                String?
  ipAddress             String?
  userAgent             String?
  endpoint              String?
  
  // Pattern analysis
  pattern               String?
  baseline              Json?
  threshold             Float?
  actualValue           Float?
  
  // Status
  status                AnomalyStatus         @default(DETECTED)
  reviewedBy            String?
  reviewedAt            DateTime?
  
